{
  "name": "runnerbuddy",
  "version": "0.1.0",
  "description": "RunnerBuddy GitHub Actions runner GUI",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
